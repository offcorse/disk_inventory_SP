@model Artist
@{ 
    string title = ViewBag.Action + " Artist";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ArtistFirstName">First Name</label>
        <input asp-for="ArtistFirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtistLastName">Last Name</label>
        <input asp-for="ArtistLastName" class="form-control" />
    </div>
    <div>
        <label asp-for="ArtistTypeId">Artist Type</label>
        <select asp-for="ArtistTypeId" class="form-control">
            <option value="">select a type</option>
            @foreach (ArtistType t in ViewBag.ArtistTypes)
            {
                <option value="@t.ArtistTypeId">@t.ArtistDescription</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="ArtistId"/>
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>