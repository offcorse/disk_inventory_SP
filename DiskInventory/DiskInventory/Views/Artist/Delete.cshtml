@model Artist
@{ 
    ViewBag.Title = "Delete Artist";

}
<h2>Confirm Delete</h2>
<h3>@Model.ArtistFirstName @Model.ArtistLastName</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ArtistId"/>
    <button type ="submit" class=" btn btn-primary">Delete</button>
    <a asp-controller="Artist" asp-action="List" class="btn btn-primary">Cancel</a>
</form>