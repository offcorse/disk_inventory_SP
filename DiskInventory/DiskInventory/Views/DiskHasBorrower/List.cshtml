@model List<DiskHasBorrower>
@{
    ViewBag.Title = "DiskHasBorrower Manager";
}

<h1>@ViewBag.Title</h1>
<h2>List of Disk Has Borrower</h2>
<a asp-controller="DiskHasBorrower" asp-action="Add">Add New DiskHasBorrower</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table_striped">
        <!-- UI for Borrower Table -->
        <thead>
            <tr>
                <th>Disk Name</th>
                <th>Borrower First Name</th>
                <th>Borrower Last Name</th>
                <th>Borrower Date</th>
                <th>Returned Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var diskhasborrower in Model)
            {
            <tr>
                <td>@diskhasborrower.Disk.DiskName</td>
                <td>@diskhasborrower.Borrower.FirstName</td>
                <td>@diskhasborrower.Borrower.LastName</td>
                <td>@diskhasborrower.BorrowedDate.ToString("MM/dd/yyyy")</td>
                <td>@diskhasborrower.ReturnedDate</td>
                <td>
                    <a asp-controller="DiskHasBorrower" asp-action="Edit" asp-route-id="@diskhasborrower.Id">Edit</a>
                </td>
            </tr>


            }
        </tbody>

    </table>
}
else
{
    <div>No Data Found!</div>
}