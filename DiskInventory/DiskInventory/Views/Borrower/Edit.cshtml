@model Borrower
@{ 
    string title = ViewBag.Action + " Borrower";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNum">Phone Number</label>
        <input asp-for="PhoneNum" class="form-control" />
    </div>

    <input type="hidden" asp-for="BorrowerId"/>
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Borrower" asp-action="List" class="btn btn-primary">Cancel</a>

</form>