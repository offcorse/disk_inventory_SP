@model List<DiskInventory.Models.Disk>
@{
    ViewBag.Title = "Disk Manager";
}
<h1>@ViewBag.Title</h1>
<h2>List of Disks</h2>

@if (Model.Count() > 0)
{
<table class="table table-bordered table_striped">    <!-- UI for Disk Table -->
    <thead>
        <tr>
            <th>Disk ID</th>
            <th>Disk Name</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Status</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disk in Model)
        {
            <tr>
                <td>@disk.DiskId</td>
                <td>@disk.DiskName</td>
                <td>@disk.ReleaseDate</td>
                <td>@disk.GenreId</td>
                <td>@disk.StatusId</td>
                <td>@disk.DiskTypeId</td>
            </tr>
        }
    </tbody>

</table>
}
else 
{
<div>No Data Found!</div>
}
